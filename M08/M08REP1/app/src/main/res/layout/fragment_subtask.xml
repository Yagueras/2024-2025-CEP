<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/button_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_constraintBottom_toBottomOf="parent"
    app:layout_constraintEnd_toStartOf="@+id/project_chart_container"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent">

    <TextView
        android:id="@+id/status_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_papaya"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="Status"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        android:layout_marginEnd="10dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toStartOf="@id/sub_task_status_picker"
        />

    <Spinner
        android:id="@+id/sub_task_status_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_papaya"
        android:paddingVertical="13dp"
        android:text="Status picker (show)"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/status_tag"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/time_used_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:background="@drawable/rounded_corner_papaya"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="Time Used"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/time_required_tag"
        app:layout_constraintEnd_toStartOf="@+id/time_used_picker"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/status_tag" />

    <Spinner
        android:id="@+id/time_used_picker"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_corner_papaya"
        android:paddingVertical="13dp"
        android:text="Status picker (show)"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintBottom_toTopOf="@+id/time_required_view"
        app:layout_constraintStart_toEndOf="@+id/time_used_tag"
        app:layout_constraintTop_toBottomOf="@+id/sub_task_status_picker" />

    <TextView
        android:id="@+id/time_required_tag"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="520dp"
        android:background="@drawable/rounded_corner_papaya"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text="Time Left"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/time_required_view"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/time_required_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="520dp"
        android:background="@drawable/rounded_corner_papaya"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="2"
        app:layout_constraintStart_toEndOf="@+id/time_required_tag" />

    <TextView
        android:id="@+id/description_tag"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:background="@drawable/rounded_corner_papaya"
        android:gravity="center"
        android:paddingVertical="12dp"
        android:text=""
        android:textColor="@color/white"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>