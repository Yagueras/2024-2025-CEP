<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/sub_task_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/rc_solid_white"
    android:padding="20dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/button_container"
        android:layout_width="match_parent"
        android:layout_height="355dp"
        android:paddingBottom="5dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/description_container"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintVertical_weight="1">

        <EditText
            android:id="@+id/sub_task_name"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:background="@drawable/rc_papaya_on_white_b"
            android:hint="Sub Task Name"
            android:inputType="textEmailAddress"
            android:maxLines="1"
            android:paddingHorizontal="20dp"
            android:paddingVertical="13dp"
            android:textColor="@color/papaya"
            android:textColorHint="@color/papaya_accent"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/responsible_user_tag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/responsible_user_tag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rc_papaya_on_papaya_b"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Resp User"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/sub_task_name"
            app:layout_constraintBottom_toTopOf="@+id/status_tag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/responsible_user_spinner"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintVertical_weight="1" />

        <Spinner
            android:id="@+id/responsible_user_spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rc_solid_papaya"
            android:paddingVertical="13dp"
            android:text="User picker (show)"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toBottomOf="@+id/sub_task_name"
            app:layout_constraintBottom_toTopOf="@+id/sub_task_status_spinner"
            app:layout_constraintStart_toEndOf="@+id/responsible_user_tag"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/status_tag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rc_papaya_on_papaya_b"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Status"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/time_used_tag"
            app:layout_constraintEnd_toStartOf="@id/sub_task_status_spinner"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/responsible_user_tag"
            app:layout_constraintVertical_weight="1" />

        <Spinner
            android:id="@+id/sub_task_status_spinner"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rc_solid_papaya"
            android:paddingVertical="13dp"
            android:text="Status picker (show)"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/time_used_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@+id/status_tag"
            app:layout_constraintTop_toBottomOf="@+id/responsible_user_spinner"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/time_used_tag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rc_papaya_on_papaya_b"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Invested Time"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/time_required_tag"
            app:layout_constraintEnd_toStartOf="@+id/time_used_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/status_tag"
            app:layout_constraintVertical_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/time_used_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rc_solid_papaya"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Time Used"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/time_required_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/time_used_tag"
            app:layout_constraintTop_toBottomOf="@+id/sub_task_status_spinner"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/time_required_tag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rc_papaya_on_papaya_b"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Required Time"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/due_date_tag"
            app:layout_constraintEnd_toStartOf="@+id/time_required_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_used_tag"
            app:layout_constraintVertical_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/time_required_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rc_solid_papaya"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Time Required"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toTopOf="@+id/due_date_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/time_required_tag"
            app:layout_constraintTop_toBottomOf="@+id/time_used_button"
            app:layout_constraintVertical_weight="1" />

        <TextView
            android:id="@+id/due_date_tag"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:layout_marginEnd="10dp"
            android:background="@drawable/rc_papaya_on_papaya_b"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Due Date"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/due_date_button"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1.5"
            app:layout_constraintStart_toEndOf="@+id/due_date_button"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/time_required_tag"
            app:layout_constraintVertical_weight="1" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/due_date_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/rc_solid_papaya"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Due Date"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintHorizontal_weight="1"
            app:layout_constraintStart_toEndOf="@+id/due_date_tag"
            app:layout_constraintTop_toBottomOf="@+id/time_required_button"
            app:layout_constraintVertical_weight="1" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/description_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/button_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintVertical_weight="1">

        <TextView
            android:id="@+id/description_tag"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/rc_papaya_on_papaya_b"
            android:gravity="center"
            android:paddingVertical="12dp"
            android:text="Sub Task Description"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@+id/description_input"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5" />

        <EditText
            android:id="@+id/description_input"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/rc_papaya_on_white_b"
            android:gravity="start"
            android:hint="Start writing!"
            android:inputType="textMultiLine"
            android:maxHeight="200dp"
            android:paddingHorizontal="20dp"
            android:paddingVertical="13dp"
            android:textColor="@color/papaya"
            android:textColorHint="@color/papaya_accent"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@+id/description_tag"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
